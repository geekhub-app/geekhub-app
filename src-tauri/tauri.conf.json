{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "https://app.geekhub.com",
    "distDir": "https://app.geekhub.com"
  },
  "package": {
    "productName": "Playgram",
    "version": "0.2.9"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "process": {
        "all": true
      },
      "app": {
        "all": true
      },
      "fs": {
        "scope": [
          "$HOME/devtauri/geekhubapp/*"
        ]
      },
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Playgram",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.playgram.app",
      "longDescription": "playgram desktop app",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {},
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://app.geekhub.com/releases/install.json",
        "https://geekhub-app.github.io/geekhub-app/install.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBQjY4QUI5QkVBNkM2RTAKUldUZ3hxYSt1WXEycWhONTJPUS9LMDdheTg4Z1NsVUV4YzREcWJJbWc0VUluTWErUmY1dHlWWlEK"
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 1160,
        "height": 960,
        "resizable": true,
        "center": false,
        "title": "playgram",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "acceptFirstMouse": true,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}